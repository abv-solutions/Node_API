<h1 class="text-center mb-3">{{title}}</h1>

{{#if token}}
<button type="button" class="btn btn-dark mb-3" data-toggle="modal" data-target="#addModal">
	Add Article
</button>
{{else}}
<h3 class="mb-4">Please login to manage articles</h3>
{{/if}}

<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="addModalLabel">Add a new article</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form action="/articles" method="POST">
					<div class="form-group">
						<label for="title">Title</label>
						<input type="text" name="title" class="form-control" placeholder="Enter article title">
					</div>
					<div class="form-group">
						<label for="body">Body</label>
						<textarea type="text" name="body" class="form-control" rows="4" placeholder="Enter article body"></textarea>
					</div>
					<input type="submit" value="Add Article" class="btn btn-dark btn-block">
				</form>
			</div>
		</div>
	</div>
</div>

{{> flash }}

{{#if token}}
<h2>Articles</h2>
<ul class="list-group mt-3">
	{{#each articles}}
	<li class="list-group-item">
		<a href="/articles/{{this._id}}">{{this.title}}</a> by {{this.author}}
	</li>
	{{/each}}
</ul>
{{/if}}